{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2016",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, 
    // "strictNullChecks": true
  },
  "include": [
    "./src/**/**/**/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}